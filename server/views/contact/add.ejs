<title>Portfolio | Balkesa</title>

</head>
<body oncontextmenu="return false">

<header>
        <a href="/" class="logo"><i class="fab fa-node-js"></i> Balkesa</a>

        <div id="menu" class="fas fa-bars"></div>
        <nav class="navbar">
            <ul>
                <li><a class="index" href="/">Home</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/projects">Projects</a></li>
                <li><a href="/services">Services</a></li>
                <li><a href="/contacts-list">Business Contacts</a></li>
                <li><a href="/contact">Contact</a></li>
                <li><a href="/auth/login">Login</a></li>
                <% if (typeof displayName == 'string' && displayName) { %>
                    <li><a href="/logout"></i>Logout</a></li>
                    <% } %>
            </ul>
        </nav>
</header>



<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Contact Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the contact's name"
                    name="name" required>
                </div>

                <div class="form-group">
                    <label for="numberTextField">Contact Number</label>
                    <input type="text" class="form-control"
                    id="numberTextField"
                    placeholder="Enter the contact's number"
                    name="number" required>
                </div>

                <div class="form-group">
                    <label for="emailTextField">Email Address</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter the contact's Email"
                    name="email" required>
                </div>

                
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/contacts-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>



